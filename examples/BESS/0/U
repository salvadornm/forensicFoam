FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.0 0 0);

boundaryField
{
    "(northbc|southbc|eastbc|westbc|topbc|bottombc)"
    {
        type            noSlip;
    }

    inner
    {
        type            noSlip;
    }

    default
    {
        type            noSlip;
    }

    inlet
    {
        type            fixedValue;
        value           uniform (9.5 0.0 0.0);
    }

    return1
    {
        type            fixedValue;
        value           uniform (0.0 4.5 0.0);  // bot +
    }

    return2
    {
        type            fixedValue; 
        value           uniform (0.0 -4.5 0.0); // top -
    }
}


