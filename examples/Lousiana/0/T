{
    
    top
    {
       // type            fixedValue;
       // value           uniform $Tatm;
        type           zeroGradient;
    }

    "(bottom|terrain)"
    {
      //  type           zeroGradient;
       type            fixedValue;
       value           uniform $Tground;
    }

   "(north|south)"
    {
        type            zeroGradient;
    }

    "(east|west)"
    {
        type            zeroGradient;
    }


    default
    {
        type            zeroGradient;
    }

    tank1
    {
     //  type            fixedValue;
     //  value           uniform 800;
       //type            zeroGradient;
       type            fixedValue;
       value           uniform $Tground;
    }
	    


