FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      topoSetDict.union;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
actions
(
    // determine c1
     {
        name    cc1;
        type    faceSet;
        action  new;
        source  patchToFace;
        sourceInfo
        {
          name terrain;
        }
     }
     // keep in tank1 all faces in c1
     {
        name    tank1;
        type    faceSet;
        action  subset;
        source  faceToFace;
        sourceInfo
        {
          set cc1;
          option all;
        }
    }
);

